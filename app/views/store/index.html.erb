<% if notice %>
	<aside id="notice"><%= notice %></aside>
<% end %>

<h1>Your Pragmatic Catalog</h1>

<ul class="catalog">
	<% @products.each do |product| %>
	<li class="<%= cycle('list_line_odd', 'list_line_even') %>">
		<%= image_tag(product.image_url) %>
		<h2><%= product.title %></h2>
		<p>
			<%= sanitize(product.description) %>
		</p>
		<div class="price">
			<%= product.price %>
		</div>
	</li>
	<% end %>
</ul>
